<div class="container">
    <h2>My Blocmarks </h2>

  <div class="col-md-8">
    <% @user_bookmarks.each do |bookmark| %>
      <h4 class="media-heading">
        <%= "#{bookmark.topic.title}" %>
        <br>
        <%= link_to bookmark.url, topic_bookmark_path(bookmark.topic, bookmark) %>
        <%= link_to "Remove", [bookmark.topic, bookmark], method: :delete, class: 'btn btn-danger' %>
      </h4>
      <br>
    <% end %>
  </div>

  <h2> Liked Bookmarks </h2>
  <div class ="col-md-8">
    <% @liked_bookmarks.each do |bookmark| %>
      <h4 class="media-heading">
        <%= "#{bookmark.topic.title}" %>
        <br>
        <%= link_to bookmark.url, topic_bookmark_path(bookmark.topic, bookmark) %>
        <%= button_to "Unlike", topic_bookmark_path(bookmark.topic, bookmark), :method => "get", class: 'btn btn-danger' %>
      </h4>
    <% end %>
  </div>

</div>
